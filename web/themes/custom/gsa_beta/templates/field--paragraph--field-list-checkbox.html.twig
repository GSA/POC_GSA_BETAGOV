
<div class="checkbox-status">
  {% if items.0.content['#markup'] == '✖' %}
    <svg class="usa-icon" aria-hidden="true" focusable="false" role="img">
      <use xlink:href="{{ theme_path }}/assets/img/sprite.svg#close"></use>
    </svg>
    <span class="usa-sr-only">Not selected</span>
  {% endif %}
  {% if element['#items'].value == 1 %}
    <svg class="usa-icon" aria-hidden="true" focusable="false" role="img">
      <use xlink:href="{{ theme_path }}/assets/img/sprite.svg#check"></use>
    </svg>
    <span class="usa-sr-only">Selected</span>
  {% endif %}
  {% if element['#items'].value == '✔' %}
    <svg class="usa-icon" aria-hidden="true" focusable="false" role="img">
      <use xlink:href="{{ theme_path }}/assets/img/sprite.svg#check"></use>
    </svg>
    <span class="usa-sr-only">Selected</span>
  {% endif %}
</div>

